{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/([A-Za-z0-9_-]{4,32})", "dest": "/api/redirect.js?code=$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
